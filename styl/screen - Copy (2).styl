.products_grid_3{
  .product{
    float: left;
    width: 50%;
  }

  .product__hotspot-hold{
    max-width: 265px;
  }

  .product_6-1{
    float: right;
  }

  .product__info{
    height: $line-height * 3 + 10px;
  }

  .product__img{
    vertical-align: middle;
    height: 265px;

    img{
      max-height: 265px;
    }
  }

  .product_6-1,
  .product_6-4{
    clear: both;

    .product__img{
      height: $h_2*2 + $h_gap + $line-height * 3 + 10px;

      img{
        max-height: $h_2*2 + $h_gap + $line-height * 3 + 10px;
      }
    }
  }

  .product_6-1:last-child,
  .product_6-4:last-child{
    width 100%

    .product__img{
      height: 265px;

      img{
        max-height: 265px;
      }
    }
  }
}




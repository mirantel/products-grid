    vertical-align: middle;

    img{
      max-height: 165px;
    }
  }

  .product__info{
    height: $line-height * 4 + 10px;
  }

  .product__img,
  .product_6-1:last-child .product__img,
  .product_6-4:last-child .product__img{
    height: 165px;
  }

  .product__hotspot-hold{
    max-width: 165px;
  }

  .product_6-1, .product_6-4{
    width: 66%;
    clear: both;

    .product__hotspot-hold{
      max-width: 359px;
    }

    .product__img{
      height: $h_3*2 + $h_gap + $line-height * 4 + 10px;


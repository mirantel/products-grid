.products_grid_4{
  .product{
    float: left;
    width: 33%;
  }

  .product_6-1{
    float: right;
  }

  .product__img{
    img{
      max-height: 100%;
      vertical-align: middle;
    }
  }

  .product__info{
    min-height: $line-height * 4;
  }

  .product__img,
  .product_6-1:last-child .product__img,
  .product_6-4:last-child .product__img{
    height: 165px;
    line-height: 165px;
  }

  .product_6-1, .product_6-4{
    width: 66%;
    clear: both;

    .product__img{
      height: $h_3*2 + $h_gap + $h_text_hold;
      line-height: $h_3*2 + $h_gap + $h_text_hold;
    }
  }

  .product_6-1:last-child,
  .product_6-4:last-child{
    width 100%
  }
}




.products_grid_3{
  .product{
    float: left;
    width: 50%;
  }

  .product_6-1{
    float: right;
  }

  .product__info{
    min-height: $line-height * 3;
  }

  .product__img{
    img{
      max-height: 100%;
      vertical-align: middle;
    }
  }

  .product__img,
  .product_6-1:last-child .product__img, .product_6-4:last-child .product__img{
    height: 265px;
    line-height: 265px;
  }

  .product_6-1, .product_6-4{
    .product__img{
      height: $h_2*2 + $h_gap + $h_text_hold - $line-height;
      line-height: $h_2*2 + $h_gap + $h_text_hold - $line-height;
    }

  }

  .product_6-1:last-child, .product_6-4:last-child{
    width 100%
  }
}




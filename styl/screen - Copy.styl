.products_grid_8{
  vertical-align: top;
  .product{
    width: 33%;
    vertical-align: top !important;
  }

  .product__info{
    min-height: $line-height * 5;
  }

  .product__img{
    height: 165px;
    line-height: 165px;

    img{
      max-height: 165px;
    }
  }
  .product_6-1, .product_6-3,
  .product_6-4,.product_6-6 {
    margin: 110px 0 -80px;
  }

  .product_6-5:last-child{
    margin-top: 30px;
  }

  .product_6-1:last-child,
  .product_6-4:last-child {
    margin: 0;
  }

  .product_6-2:last-child,
  .product_6-5:last-child {
    margin-right: 33%;
    margin-bottom: 110px;
    margin-top: 0;
  }

  .product_6-3:last-child,
  .product_6-6:last-child {
    margin-bottom: 0;
  }

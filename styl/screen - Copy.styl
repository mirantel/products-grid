.products_grid_2{
  .product{
    width: 50%;
  }

  .product_6-3, .product_6-6{
    width: 100%;
  }


  &.products_fix_height{
    .product__img{
      height: 265px;
      line-height: 265px;

      img{
        max-height: 265px;
      }
    }
  }
}


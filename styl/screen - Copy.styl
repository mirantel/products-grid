$h_2 = 265px;
$h_3 = 165px;
$h_gap = 30px;
$line-height = 19px;

$h_text_height = $line-height * 4;
$h_text_hold = $line-height * 4 +10px;

html{
  background: #999;
  font-family: 'Lato', sans-serif;
}
.wrap{
  background: #fff;
  margin: 0 auto;
  width: 1000px;
  &:after{
    content: "";
    display: table;
    clear: both;
  }
}
.main{
  width: 640px;
  background: #fff;
  float: left;
  border-right: 3px solid #999;
}
.aside{
  padding: 15px 20px;
  float: left;
  width: 1000px - 640px - 40px - 3px;
  h3{
    text-align: center;
  }
  .row_grid{
    text-align: center;
    .col{
      display: inline-block;
      vertical-align: top;
      padding: 7px;
    }
    input{
      display: none;
    }
    img{
      cursor: pointer;
      vertical-align: top;
    }
    label{
      display: block;
    }
    input:checked + label{
      box-shadow: 0 0 7px #7c9ebf;
    }
  }
}


.products{
  list-style: none;
  margin: 0;
  padding: 25px;
  font-size: 0;
  text-align: center;
  &:after{
    content: "";
    display: table;
    clear: both;
  }
}

.product{
  display: inline-block;
  vertical-align: bottom;
  padding: 0 ($h_gap/2);
  margin-bottom: $h_gap;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  &:hover{
    .product__img img{
      width: auto;
      height: auto;
    }
  }
}
.product__img{
  img{
    max-width: 100%;
    vertical-align: bottom;
  }
}
.product__info{
  margin-top: 10px;
  line-height:  1.358em; // 1.357em
  font-size: 14px;
}
.product__name{
  font-style: italic;
}
.product__price{
  font-weight: bold;
}

.products_grid_bg{
  .product{
    background: content-box #E1E1E1;
  }
}


.products_info_left .product__info{
  text-align: left;
}

.products_info_right .product__info{
  text-align: right;
}

.products_info_center .product__info{
  text-align: center;
}


